<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="TextAppearance.HeadlineBase" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="TextAppearance.TitleListItem" parent="TextAppearance.HeadlineBase">
        <item name="android:textSize">@dimen/text_standard</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.TitleSection" parent="TextAppearance.HeadlineBase">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="TextAppearance.EmptyMessage" parent="TextAppearance.HeadlineBase">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:gravity">center</item>
    </style>
</resources>